{
  "_description": "Permissions for Ollama skill tools",
  "_instructions": [
    "Merge these permissions into ~/.claude/settings.json",
    "Add to the 'permissions.allow' array",
    "Adjust paths based on your $PAI_DIR location"
  ],
  "permissions": {
    "allow": [
      "Read(//$PAI_DIR/skills/Ollama/**)",
      "Bash(bun run $PAI_DIR/skills/Ollama/Tools/*.ts:*)",
      "Bash(bun run $PAI_DIR/skills/Ollama/Tools/Run.ts:*)",
      "Bash(bun run $PAI_DIR/skills/Ollama/Tools/Generate.ts:*)",
      "Bash(bun run $PAI_DIR/skills/Ollama/Tools/Chat.ts:*)",
      "Bash(bun run $PAI_DIR/skills/Ollama/Tools/Embed.ts:*)",
      "Bash($PAI_DIR/skills/Ollama/Tools/*.ts:*)",
      "Bash(ollama:*)",
      "Bash(ollama serve:*)",
      "Bash(ollama list:*)",
      "Bash(ollama pull:*)",
      "Bash(ollama show:*)"
    ]
  }
}
