{
  "name": "mai-standup-skill",
  "version": "1.0.0",
  "description": "User-facing skill for running multi-agent standups using the Council Framework",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "verify": "bun run scripts/verify.ts",
    "test": "bun test",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "pai",
    "skill",
    "standup",
    "council",
    "multi-agent",
    "decision-making"
  ],
  "author": "PAI",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pai/mai-standup-skill.git"
  },
  "bugs": {
    "url": "https://github.com/pai/mai-standup-skill/issues"
  },
  "pai": {
    "type": "skill",
    "triggers": [
      "standup",
      "council",
      "team review",
      "quick review",
      "security review"
    ],
    "requires": [
      "mai-council-framework",
      "mai-devsecops-agents"
    ],
    "optional": [
      "mai-joplin-skill"
    ]
  }
}
